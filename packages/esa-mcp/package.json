{
  "name": "@claude-mcp-files/esa-mcp",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "pnpm /^dev:.*/",
    "dev:tsc": "tsc --watch",
    "dev:openapi": "orval -w",
    "dev:docs": "redocly preview-docs",
    "lint": "redocly lint",
    "typecheck": "tsc -p . --noEmit",
    "build": "pnpm build:orval && pnpm build:esbuild",
    "build:esbuild": "esbuild ./src/index.ts --format=esm --platform=node --bundle --packages=external --outdir=dist",
    "build:orval": "orval",
    "test": "vitest run"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@redocly/cli": "^1.26.1",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.2",
    "msw": "^2.7.0",
    "orval": "^7.3.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
